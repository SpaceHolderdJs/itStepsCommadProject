<body>
    <h1>Registration</h1>
    <form action="/registration" method="POST">
        <p>Name</p>
        <input type="text" name="userName">
        <p>Surname</p>
        <input type="text" name="surname">
        <p>Email</p>
        <input type="email" name="email">
        <p>Password</p>
        <input type="password" name="password">
        <p>Repeat password</p>
        <input type="password">
        <button type="submit" class="validate btn waves-effect">Submit</button>
    </form>
</body>